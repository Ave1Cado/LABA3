<Window x:Class="Lab3EF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab3EF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="BooksDgr" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Book_ID}" Header="ID"/>
                <DataGridTextColumn Binding="{Binding Title}" Header="Название книги"/>
                <DataGridTextColumn Binding="{Binding Authors.Name}" Header="Имя автора"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
